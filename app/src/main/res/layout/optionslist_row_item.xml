<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/workLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/optionColor"
        android:layout_toRightOf="@+id/optionColor"/>

    <TextView
        android:id="@+id/workTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/workLogo"
        android:layout_alignTop="@+id/workLogo"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/workLogo"
        android:layout_toRightOf="@+id/workLogo"
        android:gravity="center_vertical"
        android:text="Title"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:tint="@color/iconTint"
        app:srcCompat="@drawable/ic_edit_black_24dp"/>

</RelativeLayout>