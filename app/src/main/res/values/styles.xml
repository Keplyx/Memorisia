<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="colorButtonNormal">@color/buttonColorDark</item>

        <item name="android:editTextColor">@color/textColorInverse</item>
        <item name="android:textColorPrimary">@color/textColorInverse</item>
        <item name="android:textColorSecondary">@color/textColorInverseDarker</item>
        <item name="android:textColorTertiary">@color/textColorInverseDarker</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorInverse</item>
        <item name="android:textColorTertiaryInverse">@color/textColorInverse</item>
        <item name="android:textColorPrimaryDisableOnly">@color/textColorInverse</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/textColorInverse</item>
        <item name="android:textColorPrimaryNoDisable">@color/textColorInverse</item>
        <item name="android:textColorSecondaryNoDisable">@color/textColorInverse</item>
        <item name="android:textColorPrimaryInverseNoDisable">@color/textColorInverse</item>
        <item name="android:textColorSecondaryInverseNoDisable">@color/textColorInverse</item>
        <item name="android:textColorHint">@color/textColorInverse</item>
        <item name="android:textColorHintInverse">@color/textColorInverse</item>
        <item name="android:searchButtonText">@color/textColorInverse</item>
        <item name="android:listDivider">@color/dividerColorInverse</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
    </style>

    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
